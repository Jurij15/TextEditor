<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:Dialogs="clr-namespace:TextEditor.Dialogs" x:Class="TextEditor.Windows.LoggerWindow"
        mc:Ignorable="d"
                             Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        
        ResizeMode="NoResize"
        Title="LoggerWindow" Height="700" Width="593">
    <Grid>
        <ListBox x:Name="LogBox" Margin="0,0,0,115"/>
        <ui:TextBox x:Name="CommandBox" PlaceholderText="Type your command here..." Margin="78,614,0,0" VerticalAlignment="Top"/>
        <ui:Button Content="Execute" x:Name="ExecuteCommandBtn" Margin="0,628,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
