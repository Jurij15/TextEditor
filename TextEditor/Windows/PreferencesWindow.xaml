<ui:UiWindow x:Class="TextEditor.Windows.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor.Windows"
        mc:Ignorable="d"
        Title="PreferencesWindow" Height="262" Width="288"
                     xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             ResizeMode="NoResize"
             
       Background="{DynamicResource ApplicationBackgroundBrush}"
             ExtendsContentIntoTitleBar="True"
             WindowStartupLocation="CenterScreen"
             WindowCornerPreference="Round">
    <DockPanel x:Name="DPanel">
        <ui:TitleBar x:Name="PrefsTitleBar" DockPanel.Dock="Top"
                     Title="Preferences"
                     ForceShutdown="False"
                     ShowClose="True"
                     ShowMaximize="False"
                     ShowMinimize="False"
                     UseSnapLayout="False"
                     />
    </DockPanel>
</ui:UiWindow>
